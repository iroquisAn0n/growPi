#!/bin/bash

source config

bot_token="${bot_token}"
receiver="${receiver}"
#todo: implement checks

url="https://api.telegram.org/bot${bot_token}/sendPhoto"
curl -X POST -H "Content-Type: multipart/form-data" -F "chat_id=${receiver}" -F "photo=@$1" "$url" > /dev/null

echo "Image transmitted to ${receiver}"